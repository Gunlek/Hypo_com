<div class="modal fade" id="insertManipModal" tabindex="-1" role="dialog">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Ajouter une manip au planning</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/planning/insert-manip" method="POST">
        <div class="modal-body">
          <div class="form-group">
            <label for="eventDate">Date de la manip' (au format dd/mm/yyyy):</label>
            <input type="text" name="eventDate" id="eventDate" class="form-control" />
          </div>

          <div class="form-group">
            <label for="eventHour">Horaire de la manip' (au format hh:mm):</label>
            <input type="text" name="eventHour" id="eventHour" class="form-control" />
          </div>

          <div class="form-group">
            <label for="eventDuration">Durée de la manip' (en heures):</label>
            <input type="number" name="eventDuration" id="eventDuration" value="1" class="form-control" step="1" min="1" max="24"/>
          </div>

          <div class="form-group">
            <label for="manipId">Manip' à placer:</label>
            <select class="form-control" id="manipId" name="manipId">
              {% for manip in manip_list %}
                <option value="{{ manip.manip_id }}">{{manip.manip_desc}}</option>
              {% endfor %}
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Fermer</button>
          <input type="submit" class="btn btn-success" value="Ajouter au planning"/>
        </div>
      </form>
    </div>
  </div>
</div>
