{% extends "base.html.twig" %}

{% block body %}
  <div class="container-fluid">
    <div class="row">
      <div class="col">
        <center>
          <hr>
          <h2>Profil utilisateur</h2>
          <hr>
          <p>Editez vos données personnelles et modifiez votre image de profil</p>
        </center>
      </div>
    </div>
  </div>

  <div class="container">
    <form action="/profile/edit" method="POST" encType="multipart/form-data">
      <div class="row">
        <div class="col-8">
          <div class="form-group">
            <label for="firstname">Prénom: </label>
            <input type="text" readonly value="{{ profile_data.user_firstname }}" class="form-control" name="firstname" />
          </div>

          <div class="form-group">
            <label for="lastname">Nom: </label>
            <input type="text" readonly value="{{ profile_data.user_lastname }}" class="form-control" name="lastname" />
          </div>

          <div class="form-group">
            <label for="username">Nom d'utilisateur: </label>
            <input type="text" value="{{ profile_data.user_name }}" class="form-control" name="username" />
          </div>
        </div>

        <div class="col-3">
          <img src="{{ profile_data.profile_pic }}" alt="User profile picture"/>
          <div class="form-group">
            <label for="profile_picture">Modifier votre image de profil:</label>
            <input type="file" class="form-control-file" name="profile_picture" accept="image/*">
          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-12">
          <div class="form-group">
            <label for="email">Adresse email:</label>
            <input type="email" class="form-control" value="{{ profile_data.user_email }}" name="email" />
          </div>

          <div class="form-group">
            <label for="phone">Téléphone:</label>
            <input type="tel" class="form-control" value="{{ profile_data.user_phone }}" name="phone" />
          </div>
        </div>
      </div>

      <div class="form-row">
        <div class="col-6">
          <label for="password">Mot de passe: </label>
          <input type="password" class="form-control" name="password" placeholder="Votre mot de passe"/>
        </div>

        <div class="col-6">
          <label for="confPassword">Confirmez votre mot de passe: </label>
          <input type="password" class="form-control" name="confPassword" placeholder="Votre mot de passe"/>
        </div>
      </div>
      <br/>
      <input class="btn btn-success form-control" type="submit" value="Mettre à jour mes informations"/>
    </form>
  </div>

  {% include 'plannings/new_date_modal.html.twig' %}
  {% include 'plannings/include_manip_modal.html.twig' %}
{% endblock %}
